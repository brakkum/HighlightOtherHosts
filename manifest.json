
{
    "name": "Highlight Other Hosts",
    "version": "1.0",
    "description": "Highlight anchors that lead to other hosts",
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [ {
        "matches" : [
            "*://*/*"
        ],
        "css": ["style.css"],
        "js": ["script.js"]
    } ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}
